{
  "verbose": true,
  "execMap": {
    "ts": "ts-node --compilerOptions '{\"module\":\"commonjs\"}'"
  },
  "events": {
    "restart":
      "osascript -e 'display notification \"marketing-flow restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "ts json js",
  "ignore": ["src/**/*.spec.ts"],
  "watch": ["src/**/*.ts", "app/**/*.ts"]
}
